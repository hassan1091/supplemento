<%- include('partials/header'); -%>

<section class="py-5 bg-light">
    <div class="container">
        <div class="row px-4 px-lg-5 py-lg-4 align-items-center">
            <div class="col col-lg-6">
                <h1 class="h2 text-uppercase mb-0"><%= supplement.name %> </h1>
            </div>
            <div class="col col-lg-6 text-lg-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-lg-end mb-0 px-0 bg-light">
                        <li class="breadcrumb-item"><a class="text-dark" href="/"><span>Home</span></a></li>
                        <li class="breadcrumb-item"><a class="text-dark" href="/#categories"><span>Categories</span></a></li>
                        <li class="breadcrumb-item"><a class="text-dark" href="/category/<%= supplement.type %>"><span><%= supplement.type %> </span></a></li>
                        <li class="breadcrumb-item active" aria-current="page"><a><span><%= supplement.name %></span></a></li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<section class="py-5">
    <div class="container p-1">
        <h4 class="fw-normal"><strong>General Information</strong></h4>
        <p class="fs-5"><%= supplement.info %> </p>
        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 col-xxl-6 p-3 mb-5 bg-body rounded me-1">
                <ul class="list-group shadow-sm">
                    <li class="list-group-item text-bg-success"><span>Benefits</span></li>
                    <% supplement.benefit.forEach(el => { %>
                        <li class="list-group-item list-group-item-success"><span><%=el%></span></li>
                    <% }) %>
                </ul>
            </div>
            <div class="col p-3 mb-5 bg-body rounded">
                <ul class="list-group shadow-sm">
                    <li class="list-group-item text-bg-danger"><span>Side Effects</span></li>
                    <% supplement.side_effect.forEach(el => { %>
                        <li class="list-group-item list-group-item-danger"><span><%=el%></span></li>
                    <% }) %>
                </ul>
            </div>
        </div>
        <div class="text-center"><a class="btn btn-primary btn-xl bg-original-color text-light" role="button" href="/recommended">Browse recommended stores!</a></div>
    </div>
</section>
<%- include('partials/footer'); -%>